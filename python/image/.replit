modules = ["python-3.11"]

[deployment]
run = ["sh", "-c", "pip install -r requirements.txt && python app.py"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PYTHONPATH = "${PYTHONPATH}:."
DB_HOST = "your-db-host"
DB_USER = "your-db-user"
DB_PASS = "your-db-password"
DB_NAME = "psau_admission"
ALLOWED_ORIGINS = "https://your-infinityfree-domain.infinityfreeapp.com,https://your-render-app.onrender.com"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".replitignore"]

[nix]
channel = "stable-22_11"

[unitTest]
language = "python3"

[debugger]
support = true
interactive = true
transport = "localhost:0"
startCommand = ["python", "-m", "debugpy", "--listen", "0.0.0.0:5678", "app.py"]

[[debugger.env]]
PYTHONPATH = "${PYTHONPATH}:."
